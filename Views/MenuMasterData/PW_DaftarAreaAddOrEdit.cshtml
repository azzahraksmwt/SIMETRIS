@model CREDA_App.Models.m_pw_daftararea
@{
    Layout = null;
}

<form asp-action="PW_DaftarAreaAddOrEdit" asp-route-id="@Model.id" enctype="multipart/form-data">
    <div class="form-group margin-top-md">
        <label>Kode Cabang</label>
        <input type="text" asp-for="kode_cabang" class="form-control mt-2" minlength="3" maxlength="3">
        <span asp-validation-for="kode_cabang" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Detail Lokasi</label>
        <input type="text" asp-for="detail_lokasi" class="form-control mt-2">
    </div>

    <input asp-for="created_at" id="created_at" name="created_at" type="datetime-local" hidden>

    <div class="modal-footer mt-3">
        <button type="button" class="btn-batalkan ms-2" data-bs-dismiss="modal"><i class="bi bi-x-lg"></i> Batalkan </button>
        <button type="submit" class="btn-warning-custom ms-2" style="background-color: #FFCA0D;">Simpan <i class="fa-solid fa-floppy-disk"></i></button>
    </div>
</form>