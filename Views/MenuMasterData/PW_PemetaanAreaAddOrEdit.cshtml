@model CREDA_App.Models.m_pw_pemetaanarea
@{
    Layout = null;
}

<form asp-action="PW_PemetaanAreaAddOrEdit" asp-route-id="@Model.id" enctype="multipart/form-data">
    <div class="form-group margin-top-md">
        <label>Head Area</label>
        <select asp-for="id_daftar_area" class="form-control mt-2">
            <option value="">Pilih Head Area</option>
            @foreach (var area in ViewBag.DaftarAreas)
            {
                if (area.deleted_at == null)
                {
                    <option value="@area.id">@area.kode_cabang</option>
                }
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Kode Sub Area</label>
        <input type="text" asp-for="sub_area" class="form-control mt-2" minlength="4" maxlength="4">
        <span asp-validation-for="sub_area" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Detail Lokasi</label>
        <input type="text" asp-for="detail_lokasi" class="form-control mt-2">
    </div>

    <input asp-for="created_at" id="created_at" name="created_at" type="datetime-local" hidden>

    <div class="modal-footer mt-3">
        <button type="button" class="btn-batalkan ms-2" data-bs-dismiss="modal"><i class="bi bi-x-lg"></i> Batalkan </button>
        <button type="submit" class="btn-warning-custom ms-2" style="background-color: #FFCA0D;">Simpan <i class="fa-solid fa-floppy-disk"></i></button>
    </div>
</form>